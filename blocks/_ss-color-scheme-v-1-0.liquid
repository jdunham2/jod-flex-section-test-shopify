<style>
  {%-liquid
      # NOTE: CHANGES HERE MUST BE REFLECTED IN
      #  - blocks/_ss-color-schemes.liquid
      #  - blocks/_ss-color-scheme.liquid -- this file
      #  - tailwind.config.js
      assign key_background = 'background' | append: i
      assign key_background_gradient = 'background_gradient' | append: i
      assign key_text = 'text' | append: i
      assign key_button_color = 'button' | append: i
      assign key_button_label_color = 'button_label' | append: i
      assign key_secondary_button_label_color = 'secondary_button_label' | append: i
  -%}
  #shopify-section-{{ section.id }},
  #shopify-section-{{ section.id }} .ss-color-{{ section.settings.color_scheme }} {
      --ss-color-background: {{ block.settings[key_background] }};
          {% if block.settings[key_background_gradient] != empty %}
          --ss-gradient-background: {{ block.settings[key_background_gradient] }};
          {% else %}
          --ss-gradient-background: {{ block.settings[key_background] }};
          {% endif %}

          {% liquid
          assign background_color = block.settings[key_background]
          assign background_color_brightness = background_color | color_brightness
          if background_color_brightness <= 26
              assign background_color_contrast = background_color | color_lighten: 50
          elsif background_color_brightness <= 65
              assign background_color_contrast = background_color | color_lighten: 5
          else
              assign background_color_contrast = background_color | color_darken: 25
          endif
          %}
      --ss-color-foreground: {{ block.settings[key_text].red }},{{ block.settings[key_text].green }},{{ block.settings[key_text].blue }};
      --ss-color-background-contrast: {{ background_color_contrast.red }},{{ background_color_contrast.green }},{{ background_color_contrast.blue }};
      --ss-color-button: {{ block.settings[key_button_color].red }},{{ block.settings[key_button_color].green }},{{ block.settings[key_button_color].blue }};
      --ss-color-button-text: {{ block.settings[key_button_label_color].red }},{{ block.settings[key_button_label_color].green }},{{ block.settings[key_button_label_color].blue }};
      --ss-color-secondary-button: {{ block.settings[key_background].red }},{{ block.settings[key_background].green }},{{ block.settings[key_background].blue }};
      --ss-color-secondary-button-text: {{ block.settings[key_secondary_button_label_color].red }},{{ block.settings[key_secondary_button_label_color].green }},{{ block.settings[key_secondary_button_label_color].blue }};
      --ss-color-link: {{ block.settings[key_secondary_button_label_color].red }},{{ block.settings[key_secondary_button_label_color].green }},{{ block.settings[key_secondary_button_label_color].blue }};
  }
</style>

