{% stylesheet %}
  .ss-image-floating-block img {
    height: 100%;
  }

  .ss-image-floating-block--cover img {
    object-fit: cover;
  }

  .ss-image-floating-block--contain img {
    object-fit: contain;
  }

  .ss-image-floating-block {
    position: absolute;
    top: var(--ss-image-floating-mobile-position-y);
    left: var(--ss-image-floating-mobile-position-x);
    z-index: var(--ss-image-floating-z-index);
  }

  @media (min-width: 750px) {
    .ss-image-floating-block {
      top: var(--ss-image-floating-desktop-position-y);
      left: var(--ss-image-floating-desktop-position-x);
    }
  }
{% endstylesheet %}

<div
  class='
    {{ block.settings | class_list }}
    ss-block
    ss-image-floating-block
    ss-image-floating-block--{{ block.settings.object_fit }}
    ss-visibility-{{ block.settings.ss-visibility }}
    tw-absolute
  '
  style='
    --ss-image-floating-desktop-position-x: {{ block.settings.desktop_position_x }}px;
    --ss-image-floating-desktop-position-y: {{ block.settings.desktop_position_y }}px;
    --ss-image-floating-mobile-position-x: {{ block.settings.mobile_position_x }}px;
    --ss-image-floating-mobile-position-y: {{ block.settings.mobile_position_y }}px;
    --ss-image-floating-z-index: {{ block.settings.z_index }};
  '
  {{ block.shopify_attributes }}
>
  {%- liquid
    assign image_desktop = block.settings.image
    assign image_mobile = block.settings.image_mobile | default: image_desktop
  -%}
  {%- if image_desktop or image_mobile -%}
    {{
      image_mobile
      | image_url: width: 1500
      | image_tag:
        width: image_mobile.width,
        widths: '375, 550, 750, 1100, 1500',
        loading: 'lazy',
        class: 'ss-visibility-mobile'
    }}
    {{
      image_desktop
      | image_url: width: 3840
      | image_tag:
        width: image_desktop.width,
        widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
        loading: 'lazy',
        class: 'ss-visibility-desktop'
    }}
  {%- else -%}
    <div class='ss-placeholder-image'>
      {{ 'detailed-apparel-1' | placeholder_svg_tag: 'image-placeholder-svg' }}
    </div>
  {%- endif -%}
</div>

