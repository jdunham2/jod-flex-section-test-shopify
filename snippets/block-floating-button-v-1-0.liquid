{% comment %} This file is auto-generated. Do not edit this file. {% endcomment %}
{%- liquid
  assign class = 'ss-border-primary ss-bg-primary ss-text-on-primary'
  if block.settings.button_style == 'secondary'
    assign class = 'ss-border-secondary ss-bg-secondary ss-text-on-secondary'
  endif
-%}

<style>
  #ss-{{ section.id }} .block-{{ block.id }} .floating-button {
      position: absolute;
      z-index: {{ block.settings.z_index }};
      top: {{ block.settings.desktop_position_y }}%;
      left: {{ block.settings.desktop_position_x }}%;
      transform: translate(-50%, -50%);
      {% unless block.settings.wrap %}
        white-space: nowrap;
      {% endunless %}
  }
  @media (max-width: 768px) {
      #ss-{{ section.id }} .block-{{ block.id }} .floating-button {
          top: {{ block.settings.mobile_position_y }}%;
          left: {{ block.settings.mobile_position_x }}%;
      }
  }
</style>

<div
  {{ block.shopify_attributes }}
  class='block-{{ block.id }}'
>
  <a
    data-name='block-floating-button'
    href='{{ block.settings.link }}'
    class='{{ class }} floating-button'
  >
    {{ block.settings.text }}
  </a>
</div>
