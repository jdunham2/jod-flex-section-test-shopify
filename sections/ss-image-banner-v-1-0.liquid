    }

    .ss-image-banner--xlarge {
      min-height: var(--ss-image-height-xlarge);
    }
  }

  .ss-image-banner--adapt_image {
    aspect-ratio: var(--aspect-ratio);
    min-height: var(--adapt-height);
  }

  .ss-image-banner > *:not(.ss-image-banner__image-wrapper) {
    z-index: 1;
  }

  .ss-image-banner__image-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    overflow: hidden;
  }

  .ss-image-banner__image-wrapper:after {
    content: '';
    position: absolute;
    top: 0;
    background: #000000;
    width: 100%;
    height: 100%;
  }

  .ss-image-banner__image-wrapper .ss-placeholder-image {
    height: 100%;
  }

  .ss-image-banner--two-images .ss-image-banner__image-wrapper img {
    width: 50%;
  }

  .ss-image-banner--two-images .ss-image-banner__image-wrapper img:last-child {
    right: 0;
  }

  .ss-image-banner__image-wrapper img {
    position: absolute;
    object-fit: cover;
    object-position: center;
    height: 100%;
  }

  .ss-image-banner .ss-image-banner__image-wrapper:after {
    opacity: var(--overlay-opacity);
