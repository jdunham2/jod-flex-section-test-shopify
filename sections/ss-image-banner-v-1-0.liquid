<div
  class='
    {{ section.settings | class_list }}
    ss-full-width
    ss-color-{{ section.settings.color_scheme }}
    sm:ss-color-{{ section.settings.color_scheme_mobile }}
    ss-image-banner
    ss-image-banner--{{ section.settings.image_height }}
    {% if section.settings.first_image != blank and section.settings.second_image != blank %}
     ss-image-banner--two-images
    {% endif %}
  '
  style='
    --overlay-opacity: {{ section.settings.overlay_opacity | times: 1.00 | divided_by: 100 }};
    --aspect-ratio: {{ section.settings.first_image.aspect_ratio }};
    --adapt-height: {{ 1 | divided_by: section.settings.first_image.aspect_ratio | times: 100 }}vw;
  '
>
  <div class='ss-image-banner__image-wrapper'>
    {%- if section.settings.first_image != blank -%}
      {{
        section.settings.first_image
        | image_url: width: 3840
        | image_tag: width: section.settings.image.width, widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
      }}
    {%- endif %}
    {%- if section.settings.second_image != blank -%}
      {{
        section.settings.second_image
        | image_url: width: 3840
        | image_tag: width: section.settings.image.width, widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
      }}
    {%- endif %}
    {%- if section.settings.first_image == blank and section.settings.second_image == blank -%}
      <div class='ss-placeholder-image'>
        {{ 'hero-apparel-2' | placeholder_svg_tag: 'image-banner-placeholder-svg' }}
      </div>
    {%- endif -%}
  </div>

  {% content_for 'blocks' %}
</div>

